<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape
            android:shape="rectangle" >


            <corners
                android:radius="70dp"/>

            <solid
                android:color="@color/colorGrayHover" />

        </shape>
    </item>
    <item android:state_focused="true" >
        <shape
            android:shape="rectangle" >

            <corners
                android:radius="70dp"/>

            <solid
                android:color="@color/colorGrayHover" />


        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle" >

            <corners
                android:radius="40dp"/>

            <stroke
                android:color="@color/colorDivider"
                android:width="1dp"
                />

            <solid
                android:color="@color/colorGrayButton" />

        </shape>
    </item>

</selector>